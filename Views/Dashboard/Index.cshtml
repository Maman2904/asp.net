@if (@role_id == "2") {
    @Html.Partial("~/Views/Shared/DashoardPartial/_DashboardVendor.cshtml", dict)
}else if(@role_id == "3") {
    @Html.Partial("~/Views/Shared/DashoardPartial/_DashboardProcurement.cshtml", dict)
}else if(@role_id == "5"){
    @Html.Partial("~/Views/Shared/DashoardPartial/_DashboardFC.cshtml", dict)
}else if(@role_id == "4"){
    @Html.Partial("~/Views/Shared/DashoardPartial/_DashboardReceiptionist.cshtml", dict)
}else if(@role_id == "1"){
    @Html.Partial("~/Views/Shared/DashoardPartial/_DashboardAdmin.cshtml", dict)
}else if(@role_id == "6"){
