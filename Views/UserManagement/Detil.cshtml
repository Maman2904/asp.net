@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;
@{
    ViewData["Title"] = Localizer["Title"];
    var detil = ViewBag.DataUser;
}
<!--begin::Main Content-->
<div class="row">
    <div class="col-lg-12">
        <div class="card card-custom card-sticky" id="kt_page_sticky_card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="30%">@Localizer["User ID"]</th>
                        <td>@detil.user_id</td>
                    </tr>
                    <tr>
                        <th width="30%">Role</th>
                        <td>@detil.role</td>
                    </tr>
                    <tr>
                        <th width="30%">@Localizer["Name"]</th>
                        <td>@detil.name</td>
                    </tr>
                    <tr>
                        <th width="30%">@Localizer["Username"]</th>
                        <td>@detil.username</td>
                    </tr>
                    <tr>
                        <th width="30%">Email</th>
                        <td>@detil.email</td>
                    </tr>
                    <tr>
                        <th width="30%">@Localizer["Created At"]</th>
                        <td>@detil.created_at</td>
                    </tr>
                    <tr>
                        <th width="30%">@Localizer["Updated At"]</th>
                        <td>@detil.updated_at</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<!--end::Main Content-->