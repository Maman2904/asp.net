                    }
                    else
                    {
                        <span>@Localizer["NotFile"]</span>
                    }
                </td>
            </tr>
        </table>
    </div>
    @if (ViewBag.controller == "VendorManagement")
    {
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a asp-action="Index"><button type="button" class="btn btn-secondary">@Localizer["Back"]</button></a>
                </div>
            </div>
        </div>
    }
</div>