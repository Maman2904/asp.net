<div class="card card-custom mt-5 mb-5">
    <div class="card-header">
        <h3 class="card-title">@Localizer["Upload"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-borderless">
            <tr>
                <th>@Localizer["IdCard"]</th>
                <th>@Localizer["NPWPUpload"]</th>
                <th>@Localizer["Sppkp"]</th>
                <th>@Localizer["VendorStatement"]</th>
            </tr>
            <tr>
                <td>
                    @if (detil.file_id_card != null && detil.file_id_card.Length != 0)
                    {
                        <a href="@ViewBag.BaseUrl@detil.file_id_card" download><button class="btn btn-primary"><i class="fa fa-download"></i>@Localizer["Download"]</button></a>
                    }
                    else
                    {
                        <span>@Localizer["NotFile"]</span>
                    }
                </td>
                <td>
                    @if (detil.file_npwp != null && detil.file_npwp.Length != 0)
                    {
                        <a href="@ViewBag.BaseUrl@detil.file_npwp" download><button class="btn btn-primary"><i class="fa fa-download"></i>@Localizer["Download"]</button></a>
                    }
                    else
                    {
