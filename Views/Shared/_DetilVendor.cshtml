@model tufol.Models.RegistrationModel;
@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer;
@{
    var detil = ViewBag.vendor_data;
    var company = detil.company;
    var company_len = company == null ? 0 : company.Count;
}
<div class="card card-custom mt-5 mb-5">
    <div class="card-header">
        <h3 class="card-title">@Localizer["OrgLevel"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-borderless">
            <tr>
                <th width="30%">@Localizer["VendorType"]</th>
                <td>@detil.vendor_type_name</td>
            </tr>
            <tr>
                <th width="30%">@Localizer["SgCategory"]</th>
                <td>@detil.sg_category_name</td>
            </tr>
            <tr>
                <th width="30%">@Localizer["Currency"]</th>
                <td>@detil.currency_id</td>
            </tr>
            <tr>
                <th width="30%">@Localizer["PaymentTerm"]</th>
                <td>@detil.top_name</td>
            </tr>
            <tr>
                <th width="30%">@Localizer["AccGroup"]</th>
                <td>@detil.vendor_type_code</td>
            </tr>
            <tr>
                <th width="30%">@Localizer["SchemaGroup"]</th>
                <td>@detil.scheme_group (@detil.scheme_group_name)</td>
            </tr>
            <table class="table table-bordered">
                <tr>
                    <th>@Localizer["Company"]</th>
                    <th>@Localizer["PurchOrg"]</th>
                </tr>
                @if(company_len != 0) {
                    @foreach (var item in company)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td>@item.purchase_organization_name</td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td colspan="2" class="text-center">@Localizer["NoCompany"]</td>
                    </tr>
                }
            </table>
        </table>
    </div>
</div>
